var Str="";


Str+="<div class='SExampleHeader' style='line-height: 1.5'>";

Str+='<h3 style="margin-bottom: 10px">WAI-ARIA</h3>';

Str+="<p style='margin: 10px 0 10px 0'><i><b>WAI-ARIA</b> (<b>W</b>eb <b>A</b>ccessibility <b>I</b>nitiative &mdash; <b>A</b>ccessible <b>R</b>ich <b>I</b>nternet <b>A</b>pplications) &mdash; разметка для облегчения полноценного использования веб-сайтов людьми с физическими ограничениями.</i></p>";
Str+="<p style='margin: 10px 0 10px 0'>У любого тега может быть указан HTML-атрибут <b>role</b>, он указывает роль данного HTML-элемента в данном документе, что позволяет программам для людей с ограниченными возможностями лучше представлять документ пользователям.</p>";
Str+="<p style='margin: 10px 0 5px 0'>Некоторые возможные значения атрибута role:</p>";
Str+="<ul style='margin-top: 0'>";
Str+="<li><b>banner</b> &mdash; шапка сайта; в таком элементе могут быть расположены, например, логотип, название сайта, поле поиска, название страницы.</li>";
Str+="<li><b>contentinfo</b> &mdash; подвал сайта; в таком элементе могут быть расположены, например, копирайт, меню.</li>";
Str+="<li><b>main</b> &mdash; основное содержание документа; на одной странице не должно быть более одного элемента с такой ролью.</li>";
Str+="<li><b>complementary</b> &mdash; важная, но не основная часть контента; например, это могут быть информационные блоки типа погоды, анонсов; чаще всего отображается на боковой полосе страницы.</li>";
Str+="<li><b>search</b> &mdash; поиск; например, форма, используемая для поиска по сайту.</li>";
Str+="<li><b>navigation</b> &mdash; набор навигационных элементов (обычно ссылок) для навигации по странице или сайту.</li>";
Str+="</ul>";

Str+="<br><img src='images/corel/turtles_roles.png' style='width: 100%'>";

Str+="</div>";

document.write(Str);
